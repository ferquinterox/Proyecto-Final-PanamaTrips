extends basic.pug
block header
    link(rel="stylesheet", href="/css/inicio.css")
block content
    .container(class="mt-3")
        .row
            div(class="col-sm-12")
                .d-flex.justify-content-center
                    h3 ¡Descubre los mejores trips de Panamá!
    -var provincias = ["Bocas del toro", "Cocle", "Colon", "Chiriquí", "Darién", "Herrera", "Los Santos", "Panamá", "Veraguas", "Comarcas"];

    //Carousel de imagenes
    if actividad      
        .container-fluid(class="no-padding")
                div(class="col-sm-12 no-padding")
                    div(id="controles", class="carousel slide", data-ride="carousel")
                        ol(class="carousel-indicators")
                            li(data-target="#indicadores", data-slide-to="0", class="active")
                            li(data-target="#indicadores", data-slide-to="1")
                            li(data-target="#indicadores", data-slide-to="2")
                        div(class="carousel-inner")
                            for act, n in actividad
                                if n == 0
                                    div(class="carousel-item active")
                                        .carousel-caption
                                            h2 #{act.nombreact}
                                            a(href="/ofertas", class='btn btn-info') Ver Oferta
                                        img(src='/'+act.imagenes[0], alt="Primera Oferta", class="d-block w-100")
                                else
                                    div(class="carousel-item")
                                        .carousel-caption
                                            h2 #{act.nombreact}
                                            a(href="/ofertas", class='btn btn-info') Ver Oferta
                                        img(src='/'+act.imagenes[0], alt="Oferta", class="d-block w-100")
                        
                        a(class="carousel-control-prev" href="#controles" role="button" data-slide="prev")
                            span(class="carousel-control-prev-icon" aria-hidden="true")
                            span(class="sr-only") Anterior
                        a(class="carousel-control-next" href="#controles" role="button" data-slide="next")
                            span(class="carousel-control-next-icon" aria-hidden="true")
                            span(class="sr-only") Siguiente
        
    //Cuadros con informacion de la pagina
    .container    
        .row(class="mt-4 info")    
            div(class="col-sm-12 col-md-12 col-lg-4 col-xl-4 no-padding")
                img(class="img-fluid w-100 ", src="/css/bocas-toro-panama.jpg", alt="Imagen descriptiva")
            div(class="col-sm-12 col-md-12 col-lg-8 col-xl-8 pt-2")
                h4.mt-2 Conoce todo lo que Panamá tiene para ofrecerte
                p ¡Aqui en PanamáTrips encontraras las mejores actividades y viajes que Panamá tiene para ofrecerte, desde cruceros hasta ferias aqui en Panamá! 
                p Desde aquí podras reservar un puesto en la actividad o establecimiento que ofrece la actividad. 
                h5 Uneté y caza las mejores ofertas.
                a(href='/registro', class="btn btn-info rounded") Registrate
        .row(class="info info-sec mt-5")
            div(class="col-sm-12 col-md-12 col-lg-8 col-xl-8 pt-2")
                h4.mt-2 ¿Deseas promocionarte con nosotros?
                p ¡Si eres un hotel puedes afiliarte con nosotros y subir tus promociones y actividades para atraer mas personas!
                a(href='/registro-compania', class="btn btn-info rounded") Mas Información
            div(class="col-sm-12 col-md-12 col-lg-4 col-xl-4 no-padding")
                img(class="img-fluid w-100 ", src="/css/hoteleria.jpg", alt="Imagen descriptiva")
    
    //Cuadro de imagenes de abajo 
    .container-fluid      
        .row(class="mt-5")
            div(class="col-sm-12 col-md-12 col-lg-7 col-xl-7 no-padding")
                div(class="card bd-dark text-whiter")
                    img(class="card-img banner1" src="/css/panama.jpg" alt="Card image")    
                    div(class="card-img-overlay")
                        -var numero =  Math.floor(Math.random() * 10); 
                        h2.card-title  #{provincias[numero]}
                        p Descubre las ofertas disponibles en esta provincia 
                        button(class="btn btn-success") Ofertas de #{provincias[numero]}

            div(class="col-sm-12 col-md-12 col-lg-5 col-xl-5 no-padding")
                div(class="card bd-dark text-whiter")
                    img(class="card-img banner2" src="/css/canotaje.jpg" alt="Card image")    
                    div(class="card-img-overlay")
                        -numero =  Math.floor(Math.random() * 10); 
                        h2.card-title  #{provincias[numero]} 
                        p Descubre las ofertas disponibles en esta provincia 
                        button(class="btn btn-info") Ofertas de #{provincias[numero]}

                div(class="card bd-dark text-whiter")
                    img(class="card-img banner2" src="/css/tucan.jpg" alt="Card image")    
                    div(class="card-img-overlay")
                        -numero =  Math.floor(Math.random() * 10); 
                        h2.card-title  #{provincias[numero]} 
                        p Descubre las ofertas disponibles en esta provincia 
                        button(class="btn btn-primary") Ofertas de #{provincias[numero]}