extends basic.pug
block header

block content
    .container.mt-3
    .row
            div(class='col-sm-12')
                h3 ¡Se parte de nuestra comunidad de viajeros!
            div(class='col-sm-12 col-md-12 col-lg-8 col-xl-9')
                .card.shadow-lg.mb-3
                    .card-header 
                        span(class='fa fa-users fa-1x') ¡Registrate y promocionate de PanamaTrips!
                    .card-body
                        .container
                            .row
                                //img(class='col-sm-1', src="/css/logo.png", alt="Logo", width="100%",  height="50px")  
                            h3.col-sm-10 PanamaTrips!
                            if hasErrors
                             .alert.alert-danger
                                    each lista in messages
                                     p #{lista}
                            form(action="/registrar", method='post')
                                h5 Información Básica de la empresa:
                                div(class='form-group row') 
                                    .col-sm-2
                                        label(class='col-form-label', for='nombreCompania') Nombre de la compañia:
                                    .col-sm-10
                                        input(type="text", class='form-control', pattern='^[a-zA-Z]+', placeholder='Coloque el nombre de su compañia', name='companiaName')
                                hr
                                div(class='form-group row') 
                                    .col-sm-2
                                        label(class='col-form-label', for='apellidoPersona') Tipo de Compañia:
                                    .col-sm-10
                                        .form-check.form-check-inline
                                            input#inlineCheckbox1.form-check-input(type="checkbox" value="hotel")
                                            label.form-check-label(for="inlineCheckbox1") Hotel
                                        .form-check.form-check-inline
                                            input#inlineCheckbox2.form-check-input(type="checkbox" value="agencia")
                                            label.form-check-label(for="inlineCheckbox2") Agencia de actividades
                                        .form-check.form-check-inline
                                            input#inlineCheckbox3.form-check-input(type="checkbox" value="promotor")
                                            label.form-check-label(for="inlineCheckbox3") Promotor de actividades
                                        .form-check.form-check-inline
                                            input#inlineCheckbox3.form-check-input(type="checkbox" value="otro")
                                            label.form-check-label(for="inlineCheckbox3") Otro tipo de compañia
                                hr
                                div(class='form-group row') 
                                    .col-sm-2
                                        label(class='col-form-label', for='correoPersona') Correo de la empresa:
                                    .col-sm-10
                                        input(type='email', class='form-control', placeholder='example@gmail.com', name='email')
                                hr
                                h5 Redes Sociales de la empresa:
                                div(class='form-group row')
                                    .col-sm-2
                                        label(class='col-form-label fa fa-facebook-square', for='facebookComp')  Facebook de la empresa (opcional):
                                    .col-sm-10
                                        input(type='text', class='form-control', placeholder='Ejemplo: https://www.facebook.com/Microsoft/', name='facebook')
                                div(class='form-group row')
                                    label(class='fa fa-twitter col-sm-2 col-form-label', for='twitterComp') Twitter de la empresa (opcional):
                                    .col-sm-10
                                        input(type='text', class='form-control', placeholder='Ejemplo: https://www.twitter.com/Microsoft/', name='twitter')
                                div(class='form-group row')
                                    label(class='fa fa-instagram col-sm-2 col-form-label', for='instaComp') Instagram de la empresa (opcional):
                                    .col-sm-10
                                        input(type='text', class='form-control', placeholder='Ejemplo: https://www.instagram.com/Microsoft/', name='instagram')
                                div(class='form-group row has-feedback') 
                                    label(class='col-sm-3 col-form-label', for='contrasena') Contraseña de su cuenta:
                                    .col-sm-8
                                        input(type='password', id='pass1', class='form-control pass', placeholder='Escriba su contraseña', name='password')
                                    .col-sm-1
                                        span(toggle="#pass1" class="fa fa-fw fa-eye toggle-password") 
                                div(class='form-group row has-feedback')
                                    label(class='col-sm-3 col-form-label', for='contrasena2') Reescriba la contraseña:
                                    .col-sm-8
                                        input(type='password', id='pass2', class='form-control pass', placeholder='Reescriba su contraseña', name='passwordagain')
                                    .col-sm-1
                                        span(toggle="#pass2" class="fa fa-fw fa-eye toggle-password") 
                                div(class='form-group row')
                                    .col-sm-12.d-flex.justify-content-end
                                        input(class='btn btn-primary', type='submit', value='Registrarme')